@model IEnumerable<DailyReportSystem.Models.FollowsIndexViewModel>

@{
    ViewBag.Title = "フォロー日報一覧";
}

<h2>フォロー日報　一覧</h2>

<p>
    @Html.ActionLink("新規フォローの登録", "Create") | @Html.ActionLink("フォローの解除", "Delete")
</p>
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CliantCompany)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*Html.DisplayFor(modelItem => item.EmployeeId)*@
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ReportDate)*@
                @Convert.ToString(string.Format("{0:yyyy/MM/dd}", item.ReportDate))

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CliantCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.ActionLink("詳細を表示", "../Reports/Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>
